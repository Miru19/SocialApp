@model SocialApp.Models.AllUsersViewModel

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <td>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myFollowedFriendsModal">
                Your Friends
            </button>


            <div class="modal fade" id="myFollowedFriendsModal" tabindex="-1" role="dialog" aria-labelledby="myFollowedFriendsModalTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="myFollowedFriendsModalTitle">Your friends</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>
                                @foreach (var item in Model.Followed)
                                {
                                <p> @item.Name </p>
                                <p> @item.Email </p>
                                <p>
                                    <input type="button" class="btnUnfollow" id="@item.Name" data-url="@Url.Action("FollowOrUnfollowUser", "ApplicationUsers")" />
                                </p>
                            } </p>
                            </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                                </div>
                            </div>
                        </div>

                </div>
            </td>
        </tr>



    <tr>
        <td>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myRecomandationModal">
                Recommendations
            </button>

            <div class="modal fade" id="myRecomandationModal" tabindex="-1" role="dialog" aria-labelledby="myRecomandationModalTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="myRecomandationModalTitle">Your friends</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">

                            <p>
                                @foreach (var item in Model.Recommendations)
                                {
                                <p> @item.Name </p>
                                <p> @item.Email </p>
                                <p>
                                    <input type="button" id="btnFollow" />
                                </p>
                            } </p>
                            </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                                </div>
                            </div>
                        </div>
                    </div>

            </td>
    </tr>

    </table>

